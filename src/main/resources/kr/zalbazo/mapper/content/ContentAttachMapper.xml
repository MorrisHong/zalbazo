<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="kr.zalbazo.mapper.content.ContentAttachMapper">

	<insert id="insert">
		INSERT INTO CONTENT_PIC (UUID, UPLOADPATH, FILENAME, FILETYPE, CONTENT_ID)
		VALUES (#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{contentId})
	</insert>
	
	<delete id="delete">
		DELETE FROM CONTENT_PIC WHERE UUID = #{uuid}
	</delete>
	
	<select id="findByContentId" resultType="kr.zalbazo.model.content.ContentAttachVO">
		SELECT * FROM CONTENT_PIC WHERE CONTENT_ID = #{contentId}
	</select>
</mapper>